<!-- edit country page where user can replace previously entered details -->
<html>
<body>
    <h1>Edit Country</h1>

    <form action="/updateCountry" method="POST">
        <label>Country Code </label>
        <input value="<%= country.co_code %>" name="co_code" readonly>
        </br>
        <label>Country Name</label>
        <input type="text" name="co_code">
        </br>
        <label>Country Details</label>
        <input type="textArea" name="co_details">
        </br>
        <input type="submit" value="Update Country">
    </form>

    <!-- Link back to home page -->
    <a href="http://localhost:3000/">Home</a>
</body>

</html>